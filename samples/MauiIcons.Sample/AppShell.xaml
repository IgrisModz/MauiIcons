<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiIcons.Sample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mi="http://www.igrismodz.com/dotnet/2026/maui/icons"
    xmlns:pages="clr-namespace:MauiIcons.Sample.Pages"
    Title="MauiIcons Sample">

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="{mi:FontAwesomeRegular Icon=House, Size=20}"
            ContentTemplate="{DataTemplate pages:HomePage}"
            Route="HomePage" />

        <ShellContent
            Title="FontAwesome"
            Icon="{mi:FontAwesomeBrands Icon=FontAwesome, Size=20}"
            ContentTemplate="{DataTemplate pages:FontAwesomePage}"
            Route="FontAwesomePage" />

        <ShellContent
            Title="Material"
            Icon="{mi:MaterialRegular Icon=Star, Size=20}"
            ContentTemplate="{DataTemplate pages:MaterialPage}"
            Route="MaterialPage" />

        <ShellContent
            Title="Animations"
            Icon="{mi:FontAwesomeSolid Icon=Gear, Size=20}"
            ContentTemplate="{DataTemplate pages:AnimationsPage}"
            Route="AnimationsPage" />

        <ShellContent
            Title="Usage"
            Icon="{mi:FontAwesomeSolid Icon=FileLines, Size=20}"
            ContentTemplate="{DataTemplate pages:UsagePage}"
            Route="UsagePage" />
    </TabBar>

</Shell>
